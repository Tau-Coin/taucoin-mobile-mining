<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/rl_address"
        android:background="@drawable/white_rect_round_bg_no_border"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_middle_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:includeFontPadding="false"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_unit"
            style="@style/style_middle_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="@string/common_balance_unit" />

        <TextView
            android:layout_toEndOf="@+id/tv_unit"
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_balance"
            style="@style/style_mining_yellow"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_yellow"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="22dp"
            app:autoSizeMinTextSize="6dp"
            app:autoSizeStepGranularity="@dimen/dimen_size_05"
            android:text="" />

        <TextView
            android:layout_below="@+id/tv_balance"
            android:id="@+id/tv_address"
            style="@style/style_middle_light_grey"
            android:layout_width="match_parent"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="14dp"
            app:autoSizeMinTextSize="6dp"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:id="@+id/rl_address_add"
        android:background="@drawable/white_rect_round_bg_no_border"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_address_add"
            android:contentDescription="@null"
            android:src="@mipmap/icon_add"
            android:layout_centerInParent="true"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/icon_selected"/>

</RelativeLayout>
